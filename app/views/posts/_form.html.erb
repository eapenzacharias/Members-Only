<div class="row">
  <div class="col col-md-offset-3">
    <%= form_for [@user, @post] do |f|%>
      <div class="form-group">
        <%= f.text_field :title, placeholder: "Title",class: "form-control"%>
      </div>
      <div class="form-group">
        <%= f.text_area :content, class: "form-control", placeholder: "Put your thoughts here...", rows: 15%>
      </div>
      <%= f.submit class: "btn btn-primary w-100 mt-2"  %>
      <% if params[:action] == "edit" %>
        <%= link_to  "Delete", user_post_path, method: :delete,
        data: {confirm: "Are you sure?"}, class: "btn btn-danger w-100 mt-2"%>
      <%end%>
      <%= link_to  "Cancel", cancel_path, class: "btn btn-success w-100 mt-2" %>
    <% end %>
  </div>
</div>